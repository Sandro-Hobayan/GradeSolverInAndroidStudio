<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_outputpof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grade Solver"
        android:textSize="20sp"
        android:paddingHorizontal="15sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:paddingVertical="10dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Average"
        android:textSize="20sp"
        android:paddingHorizontal="15sp"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:layout_marginBottom="5dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_below="@+id/tv_outputpof"
        />



    <EditText
        android:id="@+id/et_prelim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00F4DD"
        android:layout_below="@+id/tv_output"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="5sp"
        android:hint="Enter Prelim grade"
        android:paddingHorizontal="10sp"
        android:layout_marginHorizontal="20sp"
        />

    <EditText
        android:id="@+id/et_midterm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00F4DD"
        android:layout_below="@+id/et_prelim"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="20sp"
        android:hint="Enter Midterm grade"
        android:paddingHorizontal="10sp"
        android:layout_marginHorizontal="20sp"
        />

    <EditText
        android:id="@+id/et_finals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00F4DD"
        android:layout_below="@+id/et_midterm"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="20sp"
        android:hint="Enter Final grade"
        android:paddingHorizontal="10sp"
        android:layout_marginHorizontal="20sp"
        />

    <Button
        android:id="@+id/btn_compute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_finals"
        android:layout_marginTop="10dp"
        android:backgroundTint="#3648AD"
        android:text="Compute"
        android:textSize="30sp"
        android:layout_marginHorizontal="50sp"
        />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_compute"
        android:backgroundTint="#3648AD"
        android:text="Clear"
        android:textSize="20sp"
        android:layout_marginHorizontal="150sp"
        />

</RelativeLayout>